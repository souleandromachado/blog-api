{
  "openapi": "3.0.0",
  "info": {
    "title": "API Escolar",
    "description": "API para gerenciamento de posts, alunos e professores",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Listar todos os posts",
        "responses": {
          "200": {
            "description": "Lista de posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Post" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Criar um post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Post" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Post" }
              }
            }
          }
        }
      }
    },
    "/posts/search": {
      "get": {
        "summary": "Buscar posts por título ou conteúdo",
        "parameters": [
          {
            "name": "titulo",
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "conteudo",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Posts encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Post" }
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Obter post por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Post encontrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Post" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Atualizar post por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Post" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post atualizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Post" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletar post por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Post deletado" }
        }
      }
    },
    "/alunos": {
      "get": {
        "summary": "Listar ou buscar alunos por nome",
        "parameters": [
          {
            "name": "nome",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de alunos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Aluno" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Criar aluno",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Aluno" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Aluno criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Aluno" }
              }
            }
          }
        }
      }
    },
    "/alunos/{id}": {
      "put": {
        "summary": "Atualizar aluno por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Aluno" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Aluno atualizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Aluno" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletar aluno por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Aluno deletado com sucesso" }
        }
      }
    },
    "/professores": {
      "get": {
        "summary": "Listar professores",
        "parameters": [
          {
            "name": "professor",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de professores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Professor" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Criar professor",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Professor" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Professor criado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Professor" }
              }
            }
          }
        }
      }
    },
    "/professores/{id}": {
      "put": {
        "summary": "Atualizar professor por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Professor" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Professor atualizado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Professor" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletar professor por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Professor deletado com sucesso" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "properties": {
          "titulo": { "type": "string" },
          "conteudo": { "type": "string" },
          "autor": { "type": "string" }
        },
        "required": ["titulo", "conteudo", "autor"]
      },
      "Aluno": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "curso": { "type": "string" }
        },
        "required": ["nome", "curso"]
      },
      "Professor": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "materia": { "type": "string" }
        },
        "required": ["nome", "materia"]
      }
    }
  }
}
